{"ast":null,"code":"import { cart } from '../main.js';\nexport default {\n  data() {\n    return {\n      cart: cart,\n      editedQuantity: 1,\n      selectedItem: null\n    };\n  },\n  computed: {\n    total() {\n      return this.cart.reduce((total, item) => total + item.price * item.quantity, 0);\n    }\n  },\n  methods: {\n    removeItem(itemId) {\n      this.cart.splice(itemId, 1);\n    },\n    saveEditedQuantity() {\n      if (!isNaN(this.editedQuantity) && this.editedQuantity > 0) {\n        this.selectedItem.quantity = this.editedQuantity;\n      } else {\n        alert(\"Please enter a valid quantity.\");\n      }\n    }\n  }\n};","map":{"version":3,"names":["cart","data","editedQuantity","selectedItem","computed","total","reduce","item","price","quantity","methods","removeItem","itemId","splice","saveEditedQuantity","isNaN","alert"],"sources":["C:\\Users\\Cyrelle\\Activity3_Aragones\\activity3\\src\\views\\CartList.vue"],"sourcesContent":["<template>\r\n    <div class=\"cart\">\r\n        <h2>Shopping Cart</h2>\r\n        <ul class=\"cart-items\">\r\n            <li v-for=\"item in cart\" :key=\"item.id\" class=\"cart-item\">\r\n                <span class=\"product-name\">{{ item.name }}</span>\r\n                <span class=\"price\">₱{{ item.price }}</span>\r\n                <span class=\"quantity\">\r\n                    <button @click=\"openEditDialog(item)\">Edit Quantity</button>\r\n                    <span>{{ item.quantity }}</span>\r\n                </span>\r\n                <button @click=\"removeItem(item.id)\" class=\"remove-button\">Remove</button>\r\n            </li>\r\n        </ul>\r\n        <p class=\"total\">Total: ₱{{ total }}</p>\r\n    </div>\r\n</template>\r\n\r\n<script>\r\nimport { cart } from '../main.js';\r\n\r\nexport default {\r\n    data() {\r\n        return {\r\n            cart: cart,\r\n            editedQuantity: 1,\r\n            selectedItem: null\r\n        };\r\n    },\r\n    computed: {\r\n        total() {\r\n            return this.cart.reduce((total, item) => total + (item.price * item.quantity), 0);\r\n        }\r\n    },\r\n    methods: {\r\n        removeItem(itemId) {\r\n            this.cart.splice(itemId, 1);\r\n        },\r\n        saveEditedQuantity() {\r\n            if (!isNaN(this.editedQuantity) && this.editedQuantity > 0) {\r\n                this.selectedItem.quantity = this.editedQuantity;\r\n            } else {\r\n                alert(\"Please enter a valid quantity.\");\r\n            }\r\n        }\r\n    }\r\n};\r\n</script>\r\n\r\n<style scoped>\r\n.shopping-cart {\r\n  max-width: 600px;\r\n  margin: 0 auto;\r\n}\r\n\r\n.cart-items {\r\n  list-style-type: none;\r\n  padding: 0;\r\n}\r\n\r\n.cart-item {\r\n  display: flex;\r\n  align-items: center;\r\n  justify-content: space-between;\r\n  border-bottom: 1px solid #ddd;\r\n  padding: 10px 0;\r\n}\r\n\r\n.cart-item .product-name,\r\n.cart-item .price,\r\n.cart-item .quantity {\r\n  flex: 1;\r\n}\r\n\r\n.cart-item .price,\r\n.cart-item .quantity {\r\n  text-align: center;\r\n}\r\n\r\n.cart-item .quantity button {\r\n  background: none;\r\n  border: none;\r\n  cursor: pointer;\r\n  color: blue;\r\n}\r\n\r\n.cart-item .quantity span {\r\n  margin: 0 5px;\r\n}\r\n\r\n.remove-button {\r\n  background-color: #ff6961;\r\n  color: #fff;\r\n  border: none;\r\n  padding: 5px 10px;\r\n  border-radius: 5px;\r\n  cursor: pointer;\r\n}\r\n\r\n/* Styles for dialog */\r\n.edit-dialog {\r\n    position: fixed;\r\n    top: 50%;\r\n    left: 50%;\r\n    transform: translate(-50%, -50%);\r\n    background-color: #fff;\r\n    padding: 20px;\r\n    border: 1px solid #ccc;\r\n    border-radius: 5px;\r\n    box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);\r\n}\r\n\r\n.edit-dialog input[type=\"number\"] {\r\n    width: 50px;\r\n    padding: 5px;\r\n    margin-right: 10px;\r\n}\r\n\r\n.edit-dialog button {\r\n    padding: 5px 10px;\r\n    margin-right: 10px;\r\n    cursor: pointer;\r\n}\r\n\r\n.edit-dialog button:last-child {\r\n    margin-right: 0;\r\n}\r\n.total {\r\n  text-align: right;\r\n  margin-top: 20px;\r\n  font-weight: bold;\r\n}\r\n</style>\r\n"],"mappings":"AAmBA,SAASA,IAAG,QAAS,YAAY;AAEjC,eAAe;EACXC,IAAIA,CAAA,EAAG;IACH,OAAO;MACHD,IAAI,EAAEA,IAAI;MACVE,cAAc,EAAE,CAAC;MACjBC,YAAY,EAAE;IAClB,CAAC;EACL,CAAC;EACDC,QAAQ,EAAE;IACNC,KAAKA,CAAA,EAAG;MACJ,OAAO,IAAI,CAACL,IAAI,CAACM,MAAM,CAAC,CAACD,KAAK,EAAEE,IAAI,KAAKF,KAAI,GAAKE,IAAI,CAACC,KAAI,GAAID,IAAI,CAACE,QAAS,EAAE,CAAC,CAAC;IACrF;EACJ,CAAC;EACDC,OAAO,EAAE;IACLC,UAAUA,CAACC,MAAM,EAAE;MACf,IAAI,CAACZ,IAAI,CAACa,MAAM,CAACD,MAAM,EAAE,CAAC,CAAC;IAC/B,CAAC;IACDE,kBAAkBA,CAAA,EAAG;MACjB,IAAI,CAACC,KAAK,CAAC,IAAI,CAACb,cAAc,KAAK,IAAI,CAACA,cAAa,GAAI,CAAC,EAAE;QACxD,IAAI,CAACC,YAAY,CAACM,QAAO,GAAI,IAAI,CAACP,cAAc;MACpD,OAAO;QACHc,KAAK,CAAC,gCAAgC,CAAC;MAC3C;IACJ;EACJ;AACJ,CAAC","ignoreList":[]},"metadata":{},"sourceType":"module","externalDependencies":[]}