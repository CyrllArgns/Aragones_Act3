{"ast":null,"code":"import { cart } from '../main.js';\nexport default {\n  data() {\n    return {\n      cart: cart\n    };\n  },\n  computed: {\n    total() {\n      return this.cart.reduce((total, item) => total + item.price * item.quantity, 0);\n    }\n  },\n  methods: {\n    removeItem(itemId) {\n      this.cart.splice(itemId, 1);\n    }\n  }\n};","map":{"version":3,"names":["cart","data","computed","total","reduce","item","price","quantity","methods","removeItem","itemId","splice"],"sources":["C:\\Users\\Cyrelle\\Activity3_Aragones\\activity3\\src\\views\\CartList.vue"],"sourcesContent":["<template>\r\n    <div class=\"cart\">\r\n        <h2>Shopping Cart</h2>\r\n        <ul class=\"cart-items\">\r\n        <li v-for=\"item in cart\" :key=\"item.id\" class=\"cart-item\">\r\n            <span class=\"product-name\">{{ item.name }}</span>\r\n            <span class=\"price\">₱{{ item.price }}</span>\r\n            <span class=\"quantity\">\r\n            <button @click=\"editQuantity(item)\">Edit Quantity</button>\r\n            <span>{{ item.quantity }}</span>\r\n            </span>\r\n            <button @click=\"removeItem(item.id)\" class=\"remove-button\">Remove</button>\r\n        </li>\r\n        </ul>\r\n        <p class=\"total\">Total: ₱{{ total }}</p>\r\n    </div>\r\n</template>\r\n\r\n\r\n<script>\r\nimport { cart } from '../main.js'\r\n\r\nexport default {\r\n    data() {\r\n        return{\r\n            cart: cart\r\n        }\r\n    },\r\n    computed: {\r\n        total() {\r\n        return this.cart.reduce((total, item) => total + (item.price * item.quantity), 0);\r\n        }\r\n    },\r\n    methods: {\r\n\r\n        removeItem(itemId) {\r\n            this.cart.splice(itemId,1)\r\n        },\r\n    }\r\n};\r\n</script>\r\n\r\n<style scoped>\r\n.shopping-cart {\r\n  max-width: 600px;\r\n  margin: 0 auto;\r\n}\r\n\r\n.cart-items {\r\n  list-style-type: none;\r\n  padding: 0;\r\n}\r\n\r\n.cart-item {\r\n  display: flex;\r\n  align-items: center;\r\n  justify-content: space-between;\r\n  border-bottom: 1px solid #ddd;\r\n  padding: 10px 0;\r\n}\r\n\r\n.cart-item .product-name,\r\n.cart-item .price,\r\n.cart-item .quantity {\r\n  flex: 1;\r\n}\r\n\r\n.cart-item .price,\r\n.cart-item .quantity {\r\n  text-align: center;\r\n}\r\n\r\n.cart-item .quantity button {\r\n  background: none;\r\n  border: none;\r\n  cursor: pointer;\r\n  color: blue;\r\n}\r\n\r\n.cart-item .quantity span {\r\n  margin: 0 5px;\r\n}\r\n\r\n.remove-button {\r\n  background-color: #ff6961;\r\n  color: #fff;\r\n  border: none;\r\n  padding: 5px 10px;\r\n  border-radius: 5px;\r\n  cursor: pointer;\r\n}\r\n\r\n.total {\r\n  text-align: right;\r\n  margin-top: 20px;\r\n  font-weight: bold;\r\n}\r\n</style>\r\n"],"mappings":"AAoBA,SAASA,IAAG,QAAS,YAAW;AAEhC,eAAe;EACXC,IAAIA,CAAA,EAAG;IACH,OAAM;MACFD,IAAI,EAAEA;IACV;EACJ,CAAC;EACDE,QAAQ,EAAE;IACNC,KAAKA,CAAA,EAAG;MACR,OAAO,IAAI,CAACH,IAAI,CAACI,MAAM,CAAC,CAACD,KAAK,EAAEE,IAAI,KAAKF,KAAI,GAAKE,IAAI,CAACC,KAAI,GAAID,IAAI,CAACE,QAAS,EAAE,CAAC,CAAC;IACjF;EACJ,CAAC;EACDC,OAAO,EAAE;IAELC,UAAUA,CAACC,MAAM,EAAE;MACf,IAAI,CAACV,IAAI,CAACW,MAAM,CAACD,MAAM,EAAC,CAAC;IAC7B;EACJ;AACJ,CAAC","ignoreList":[]},"metadata":{},"sourceType":"module","externalDependencies":[]}